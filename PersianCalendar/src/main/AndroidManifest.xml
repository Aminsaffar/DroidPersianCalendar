<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.byagowi.persiancalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="412"
    android:versionName="4.1.2">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="ANDROID.PERMISSION.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ApplicationPreference"
            android:exported="false"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.PREFERENCE"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="@string/about">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.EMBED"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ConverterActivity"
            android:exported="false"
            android:label="@string/date_converter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.EMBED"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CompassActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:label="@string/qibla_compass"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.EMBED"/>
            </intent-filter>
        </activity>

        <receiver
            android:name="com.byagowi.persiancalendar.SystemStartup"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".AlarmReceiver"/>
        <receiver android:name=".AthanResetReceiver"/>
        <receiver android:name=".AlarmReceiver$StopAthanPlaybackReceiver"/>

        <service
            android:name=".ApplicationService"
            android:label="Calendar Service"></service>

        <receiver
            android:name=".Widget1x1"
            android:exported="false"
            android:icon="@drawable/launcher_icon"
            android:label="@string/widget_mini_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/persiancalendar_provider1x1"/>
        </receiver>
        <receiver
            android:name=".Widget4x1"
            android:exported="false"
            android:icon="@drawable/launcher_icon"
            android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/persiancalendar_provider4x1"/>
        </receiver>

        <service
            android:name=".DashClockUpdate"
            android:icon="@drawable/day31"
            android:label="@string/app_name"
            android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA">
            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension"/>
            </intent-filter>

            <meta-data
                android:name="protocolVersion"
                android:value="1"/>
            <meta-data
                android:name="description"
                android:value="@string/app_name"/>
        </service>
    </application>

</manifest>
